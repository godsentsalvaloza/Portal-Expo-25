  <body class="is-preload">
    <!-- Header  -->
    <header id="header">
      <div class="inner">
        <a id="logo" class="image avatar py-3" href="/"
          ><img src="/images/SentroDeMuseoMain.jpg" alt=""
        /></a>
      </div>
    </header>

    <!-- Menu -->
    <nav id="menu">
      <ul class="links">
        <li><a href="/">Home</a></li>
        <li><a href="/landing">Sentro De Museo</a></li>
        <li><a href="/paintings">Paintings</a></li>
        <li><a href="/sculptures">Sculptures</a></li>
        <li><a href="/researches">Researches</a></li>
      </ul>
      <ul class="actions stacked">
        <li><a href="/landing" class="button primary fit">Get Started</a></li>
      </ul>
    </nav>

    <!-- Main -->
    <div id="main">
      <section id="two">
        <div class="d-flex align-items-center justify-content-between mb-3">
          <h2 class="text-white mb-0">Sculptures</h2>
          <a href="#menu" class="btn btn-primary align-self-center">Menu</a>
        </div>
        <div class="row">
          <style>
            .membersDescription-container {
              height: 0;
              overflow: hidden;
              transition: height 0.7s ease, padding 0.7s ease;
              padding-top: 0;
              padding-bottom: 0;
            }

            .membersDescription-container.show {
              height: auto;
              padding-top: 10px;
              padding-bottom: 10px;
            }
            .image.fit {
              position: relative;
              width: 100%;
              padding-top: 100%; /* 1x1 aspect ratio */
              overflow: hidden;
            }

            .image.fit img {
              position: absolute;
              top: 0;
              left: 0;
              width: 100%;
              height: 100%;
              object-fit: cover;
              opacity: 0;
              transform: scale(0.8);
              animation: fadeInScale 0.9s ease forwards;
              transition: transform 0.3s ease, opacity 0.3s ease;
            }

            .image.fit:hover img {
              transform: scale(1.05);
              opacity: 0.9;
            }

            /* Keyframe Animation */
            @keyframes fadeInScale {
              0% {
                opacity: 0;
                transform: scale(0.9);
              }
              100% {
                opacity: 1;
                transform: scale(1);
              }
            }
          </style>
          {%- for post in collections.sculptures -%}
          <article class="col-6 col-12-xsmall work-item">
            <div
              class="row-item bg-white py-3 px-3 rounded clickable-card"
              id="{{ post.data.identifier }}"
            >
              <a
                href="{{ post.data.sculpture_image }}"
                class="image fit thumb"
                id="paintingLink"
              >
                <img
                  src="{{ post.data.sculpture_image }}"
                  alt="{{ post.data.sculpture_image_alt_text }}"
                  id="paintingImage"
                />
              </a>
              <h3
                class="text-dark border-dark"
                id="paintingTitle"
                style="
                  font-size: 1.4em;
                  margin: 0;
                  padding: 0;
                  font-weight: bold;
                "
              >
                {{ post.data.sculpture_name }}
              </h3>
              <h6 class="text-dark" id="paintingSection" style="font-size: 1em">
                {{ post.data.section }}
              </h6>

              <div class="membersDescription-container">
                <p
                  class="text-dark pb-3"
                  id="paintingDescription"
                  style="font-size: 0.85em; text-align: justify"
                >
                  {{ post.data.sculpture_description | safe }}
                </p>
                <p
                  class="text-dark mb-1"
                  style="font-size: 0.85em; font-weight: bold"
                >
                  Members:
                </p>
                <div style="font-size: 0.8em; color: black">
                  {{ post.data.members | safe }}
                </div>
              </div>

              <div class="d-flex justify-content-center my-3">
                <button class="paintingButton btn btn-primary px-5">
                  See more
                </button>
              </div>
            </div>
          </article>
          {%- endfor -%}

          <!-- script -->
          <script>
            document.querySelectorAll(".clickable-card").forEach((card) => {
              card.addEventListener("click", function (e) {
                if (
                  e.target.tagName.toLowerCase() === "a" ||
                  e.target.classList.contains("paintingButton")
                )
                  return;

                const link = card.querySelector("a");
                if (link) {
                  link.click();
                }
              });
            });

            document.querySelectorAll(".paintingButton").forEach((button) => {
              button.addEventListener("click", function (event) {
                const membersContainer = this.closest(
                  ".clickable-card"
                ).querySelector(".membersDescription-container");
                const isOpen = membersContainer.classList.contains("show");

                // Close all open containers
                document
                  .querySelectorAll(".membersDescription-container.show")
                  .forEach((container) => {
                    if (container !== membersContainer) {
                      container.classList.remove("show");
                      container
                        .closest(".clickable-card")
                        .querySelector(".paintingButton").textContent =
                        "See more";
                    }
                  });

                // Toggle the current container
                if (isOpen) {
                  membersContainer.classList.remove("show");
                  this.textContent = "See more";
                } else {
                  membersContainer.classList.add("show");
                  this.textContent = "See less";
                }

                event.stopPropagation();
              });
            });
          </script>
        </div>
      </section>
    </div>

